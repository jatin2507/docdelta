{
  "name": "scribeverse",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Multi-language documentation tool with incremental updates and AI-powered summaries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "scribeverse": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build"
  },
  "keywords": [
    "documentation",
    "generator",
    "incremental",
    "ai",
    "typescript",
    "ast",
    "git"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/scribeverse"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@ai-sdk/xai": "^2.0.22",
    "@anthropic-ai/sdk": "^0.63.0",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@github/copilot-language-server": "^1.374.0",
    "@google/generative-ai": "^0.24.1",
    "ai": "^5.0.51",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "crypto-js": "^4.2.0",
    "diff": "^8.0.2",
    "dotenv": "^17.2.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "globby": "^14.1.0",
    "litellm": "^0.12.0",
    "marked": "^16.3.0",
    "mermaid": "^11.12.0",
    "ollama": "^0.5.18",
    "openai": "^5.22.1",
    "ora": "^9.0.0",
    "simple-git": "^3.28.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  }
}
